<body>
    <div class="container">
        <h1>Place Voting History</h1>
        <div id="votingHistory">
            <!-- Dynamic content will be inserted here -->
        </div>
        <!-- Button to return to the main site -->
        <button onclick="window.location.href='.tourism';" class="button">Return to Main Site</button>
    </div>

    <script>
        // Updated data with type and postal code
        var votingData = [
            { place: "Eiffel Tower", type: "Cultural and Historical Attraction", country: "France", postalCode: "75007" },
            { place: "Statue of Liberty", type: "Cultural and Historical Attraction", country: "USA", postalCode: "10004" },
            { place: "Taj Mahal", type: "Cultural and Historical Attraction", country: "India", postalCode: "282001" },
            { place: "Great Wall of China", type: "Cultural and Historical Attraction", country: "China", postalCode: "100101" },
            { place: "Grand Canyon", type: "Natural Attraction", country: "USA", postalCode: "86023" }
        ];

        // Function to display voting history
        function displayVotingHistory() {
            var votingHistoryElement = document.getElementById('votingHistory');
            if (votingData.length === 0) {
                votingHistoryElement.innerHTML = "<p>No voting history available.</p>";
            } else {
                var ul = document.createElement('ul');
                votingData.forEach(function(item) {
                    var li = document.createElement('li');
                    li.textContent = `${item.place} - ${item.type} - ${item.country} - Postal Code: ${item.postalCode}`;
                    ul.appendChild(li);
                });
                votingHistoryElement.appendChild(ul);
            }
        }

        // Call the function to display voting history
        displayVotingHistory();
    </script>
</body>
